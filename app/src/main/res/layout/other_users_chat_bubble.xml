<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_weight="90"
        tools:srcCompat="@tools:sample/avatars[10]" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username12"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@id/message12"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/time12"
            android:text="Text from layout"
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <TextView
            android:text="12:45"
            android:id="@+id/time12"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:layout_alignEnd="@+id/message12"/>

        <TextView
            android:text="sdksjdksjdkdkd"
            android:textSize="15dp"
            android:paddingVertical="7dp"
            android:paddingHorizontal="13dp"
            android:id="@+id/message12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time12"
            android:background="@drawable/other_users_background"
            android:textColor="#f9f9f9" />
    </RelativeLayout>

</LinearLayout>